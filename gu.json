{
    "base_url": "/",
    "controllers": "./controllers",
    "routes": {
        "GET /": "index",
        "POST /": "embed"
    },

    "logdir": "var/log",

    "aws_profile": "visuals",
    "s3bucket": "gdn-cdn",
    "s3domain": "https://interactive.guim.co.uk",

    "types": {
        "map": {
            "s3basepath": "maps/embed",
            "template": "map.html",
            "mimeType": "text/html"
        },
        "chart": {
            "s3basepath": "charts/embed",
            "mimeType": "text/html"
        }
    },

    "fontPath": "bower_components/guss-webfonts/webfonts/hinting-off/kerning-on/latin1",
    "fonts": [
        {
            "file": "GuardianEgyptianWeb/GuardianEgyptianWeb-Semibold.woff",
            "name": "DE5 Display Egyptian SemiBold",
            "classes": ["country", "general-label"]
        },{
            "file": "GuardianTextSansWeb/GuardianTextSansWeb-Regular.woff",
            "name": "DS3 Display Sans",
            "classes": ["scale", "city-label"]
        },{
            "file": "GuardianTextSansWeb/GuardianTextSansWeb-Medium.woff",
            "name": "DS5 Display Sans Semibold",
            "classes": ["capital-label", "marker__label"]
        }
    ]
}
